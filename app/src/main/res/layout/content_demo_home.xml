<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mikesdemoapp.givemewingzzz.mikesdemoapp.demohome.DemoHomeActivity"
    tools:showIn="@layout/activity_demo_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_view_padding"
            android:layout_marginEnd="@dimen/standard_view_padding"
            android:layout_marginStart="@dimen/standard_view_padding"
            android:layout_marginTop="@dimen/standard_view_padding"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"
                android:padding="8dp"
                android:text="@string/about_me"
                android:textColor="@color/blue_grey_2" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/work_so_far"
            android:textColor="@color/searchBarColorLight"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/demo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        </android.support.v7.widget.RecyclerView>


        <!-- Add Divider -->
        <include layout="@layout/more_divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:padding="8dp"
            android:text="@string/about_me" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:padding="8dp"
            android:text="@string/about_me" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:padding="8dp"
            android:text="@string/about_me" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
